{
  "compilerOptions": {
    "target": "ESNext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "lib": ["ESNext"],
    "paths": {
      "#graphql/*": ["./src/graphql/*"],
      "#types/*": ["./src/graphql/types/*"],
      "#test/*": ["./test/*"]
    },
    "outDir": "./build/src",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  }
}
